<Window x:Class="WOZNY.PW.WPF_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Products" Name="ProductsTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <DockPanel>
                        <ListBox HorizontalContentAlignment="Stretch" ItemsSource="{Binding Products}"
                                 Name="ProductsList" SelectedItem="{Binding SelectedProduct}"
                                 DockPanel.Dock="Top">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Margin" Value="10" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock TextAlignment="Center" FontSize="26">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} {1}">
                                                <Binding Path="Producer.Name" />
                                                <Binding Path="Model" />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Content="Remove" Command="{Binding RemoveItemCommand}" DockPanel.Dock="Bottom" />
                    </DockPanel>
                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
                    <Grid Grid.Column="2" DataContext="{Binding ElementName=ProductsList, Path=SelectedItem}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Label Content="Producer:" HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="24" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Producer.Name}"
                                   HorizontalAlignment="Center" FontSize="20"
                                   VerticalAlignment="Center" />
                        <Label Content="Model:" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" FontSize="24"
                               VerticalAlignment="Center" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Model}" HorizontalAlignment="Center"
                                   FontSize="20"
                                   VerticalAlignment="Center" />
                        <Label Content="Price:" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" FontSize="24"
                               VerticalAlignment="Center" />
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Path=Price, StringFormat={}{0} zł}"
                                   HorizontalAlignment="Center"
                                   FontSize="20"
                                   VerticalAlignment="Center" />
                        <Label Content="Processor:" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center"
                               FontSize="24"
                               VerticalAlignment="Center" />
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Processor}" HorizontalAlignment="Center"
                                   FontSize="20"
                                   VerticalAlignment="Center" />
                        <Label Content="Screen size:" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center"
                               FontSize="24"
                               VerticalAlignment="Center" />
                        <TextBlock Grid.Row="4" Grid.Column="1"
                                   HorizontalAlignment="Center" FontSize="20"
                                   VerticalAlignment="Center">
                            <TextBlock.Text>
                                <Binding Path="ScreenSize" StringFormat="{}{0}&quot;" />
                            </TextBlock.Text>
                        </TextBlock>
                        <Label Content="Drive:" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" FontSize="24"
                               VerticalAlignment="Center" />
                        <TextBlock Grid.Row="5" Grid.Column="1"
                                   HorizontalAlignment="Center" FontSize="20"
                                   VerticalAlignment="Center">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}; {1}GB">
                                    <Binding Path="Drive.Type" />
                                    <Binding Path="Drive.Capacity" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Producers" Name="ProducersTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <DockPanel>
                        <ListBox HorizontalContentAlignment="Stretch" ItemsSource="{Binding Producers}"
                                 Name="ProducersList" DockPanel.Dock="Top" SelectedItem="{Binding SelectedProducer}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Margin" Value="10" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock TextAlignment="Center" FontSize="26" Text="{Binding Name}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Content="Remove" Command="{Binding RemoveItemCommand}" DockPanel.Dock="Bottom" />
                    </DockPanel>
                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
                    <Grid Grid.Column="2" DataContext="{Binding ElementName=ProducersList, Path=SelectedItem}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Label Content="Name:" HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="24" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}"
                                   HorizontalAlignment="Center" FontSize="20"
                                   VerticalAlignment="Center" />
                        <Label Content="Country:" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center"
                               FontSize="24"
                               VerticalAlignment="Center" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Country}" HorizontalAlignment="Center"
                                   FontSize="20"
                                   VerticalAlignment="Center" />
                        <Label Content="Headquarters:" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center"
                               FontSize="24"
                               VerticalAlignment="Center" />
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Path=Headquarters}"
                                   HorizontalAlignment="Center"
                                   FontSize="20"
                                   VerticalAlignment="Center" />
                        <Label Content="Founded:" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center"
                               FontSize="24"
                               VerticalAlignment="Center" />
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Founded}" HorizontalAlignment="Center"
                                   FontSize="20"
                                   VerticalAlignment="Center" />
                        <Label Content="CEO:" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center"
                               FontSize="24"
                               VerticalAlignment="Center" />
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CEO}" HorizontalAlignment="Center"
                                   FontSize="20"
                                   VerticalAlignment="Center" />

                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>